<%= render 'partial/navbar' %>

<div class="cotainer">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">


      <h2>登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- <%= devise_error_messages! %> -->
      <%= render "partial/deviseErrorMsg" %>
      <hr>
      <%= link_to " Googleでログインする", user_google_oauth2_omniauth_authorize_path, class: "btn btn-google" %>

      <hr>


      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'email' %>
      </div>

      <div class="fom-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: 'パスワード' %>
      </div>

      <div class="form-group">
        <%= f.label :パスワードの確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'パスワードの確認' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:'btn btn-primary' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
